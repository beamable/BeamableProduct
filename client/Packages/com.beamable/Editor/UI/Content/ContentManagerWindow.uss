/* global styles for the window live here */

#_windowRoot {
    flex-grow: 1;
    min-width:500px;
}
#window-main {
    position: absolute;
    top: 0px;
    bottom: 0px;
    right: 0px;
    left: 0px;
}

#explorer-container {
    position: absolute;
    top: 35px;
    bottom: 30px;
    left: 0px;
    right: 0px;
}


ExplorerVisualElement > TemplateContainer,
ExplorerVisualElement {
    flex-grow: 1;
}
#actionBarVisualElement{
    background-image: resource("Packages/com.beamable/Editor/UI/Content/Icons/actionBarBackground.png");
}

#status-bar-container {
    position: absolute;
    left: 0px;
    right: 0px;
    bottom: 0px;
    height: 30px;
    background-image: resource("Packages/com.beamable/Editor/UI/Content/Icons/actionBarBackground.png");
}

