/* global styles for the window live here */

#_windowRoot {
    flex-grow: 1;
    min-width:500px;
}
#window-main {
    position: absolute;
    top: 0px;
    bottom: 0px;
    right: 0px;
    left: 0px;
}

#assistant-container {
    position: absolute;
    top: 35px;
    bottom: 30px;
    left: 0px;
    right: 0px;
}


