                <beamable:PrimaryButtonVisualElement name="signIn" text="Sign In"/>
            </engine:VisualElement>

            <engine:VisualElement name="errorContainer">
                <engine:Label name="errorLabel"></engine:Label>
            </engine:VisualElement>

        </engine:VisualElement>
    </engine:VisualElement>

</engine:UXML>