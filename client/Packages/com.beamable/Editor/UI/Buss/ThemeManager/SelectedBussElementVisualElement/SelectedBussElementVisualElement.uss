#root {
    flex-grow: 1;
    margin-bottom: 10px;
    padding-bottom: 10px;
}

#header {
    padding-left: 20px;
    padding-right: 20px;
    height: 30px;
    justify-content: center;
}

#headerLabel {
    -unity-font: url("project:///Packages/com.beamable/Editor/UI/Font/Lato-Semibold.ttf");
    -unity-font-style: bold;
    font-size: 12px;
}

#classesLabel {
    -unity-font: url("project:///Packages/com.beamable/Editor/UI/Font/Lato-Semibold.ttf");
    -unity-font-style: bold;
    font-size: 12px;
    padding-left: 20px;
}

#classesList {
    margin-top: 5px;
    margin-left: 20px;
    margin-right: 20px;
}

#classElement {
    justify-content: center;
}

#classElement > TextField {
    margin-left: 50px;
}

#buttonsContainer {
    margin-left: 20px;
    margin-right: 20px;
    flex-direction: row-reverse;
}

#addButton {
    width: 30px;
    height:30px;
}

#removeButton {
    width: 30px;
    height:30px;
}

#elementsContainer {
    flex-grow: 1;
}

LabeledTextField {
    margin-top: 20px;
    margin-left: 20px;
    margin-right: 20px;
}

LabeledTextField #label {
    -unity-font: url("project:///Packages/com.beamable/Editor/UI/Font/Lato-Semibold.ttf");
    -unity-font-style: bold;
    font-size: 12px;
    color: #ffffff;
    width: 160px;
}
