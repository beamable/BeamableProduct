<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        
        <!-- As of Beamable 1.0, net6.0 is required. -->
        <TargetFramework>net6.0</TargetFramework>
        
        <!-- Advanced C# Features are disabled by default. The Unity SDK does not support these features. 
             If you enable them, it will be harder to copy/paste code between the service and Unity. -->
        <ImplicitUsings>disable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        
        <!-- Warning 1591 is about missing XML comments on methods. Beamable suggests disabling this warning. 
             https://learn.microsoft.com/en-us/dotnet/csharp/language-reference/compiler-messages/cs1591 -->
        <NoWarn>1591</NoWarn>
        
        <!-- The autogenerated OpenAPI page will use the generated serviceDocs.xml file to handle 
             API descriptions. The OpenAPI page will break if there is no `serviceDocs.xml` file. -->
        <DocumentationFile>serviceDocs.xml</DocumentationFile>
    </PropertyGroup>

    <!-- 
        The beam-init target should be run when the project is first created.
         It will run a `beam init` command and prompt the user to sign into Beamable, 
         and then do a `beam services register` to register the current project with Docker and Beamable.
         Then it will run the beam-update Target, which updates the SDK.
    -->
    <Target Name="beam-init" DependsOnTargets="beam-update">
        <Message Text="Running beam init" />
        <Exec Command="dotnet beam init --saveToFile" />
        <Message Text="Registering service" />
        <Exec Command="dotnet beam services register --id BeamService --type HttpMicroservice --local-build-context . --local-dockerfile Dockerfile --local-log Debug" />
        <Message Text="Done initializing Beamable!" />
    </Target>
    
    <!--   
        The beam-update target can be run anytime. It will update the Beamable SDK and Local Tools.
    -->
    <Target Name="beam-update" Condition="'$(BeamableSkipUpdate)' != 'true'">
        <Message Text="Updating Beamable Runtime Nuget Package..." />
        <Exec Command="dotnet add package Beamable.Microservice.Runtime --prerelease" />
        <Message Text="Updating Beamable Local CLI Tool..." />
        <Exec Command="dotnet tool update Beamable.Tools --local --prerelease" />
        <Message Text="Done updating Beamable!" />
    </Target>
    
    <Target Name="beam-dev">
        <Message Text="Starting BeamService for development..." />
        <Exec Command="dotnet beam services deploy"/>
    </Target>

    <ItemGroup>
        <PackageReference Include="Beamable.Microservice.Runtime" Version="1.4.0-PREVIEW.RC2" />
        <PackageReference Include="EmbedIO" Version="3.4.*" />
        <PackageReference Include="LoxSmoke.DocXml" Version="3.4.*" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0-preview.6.21352.12" />
        <PackageReference Include="Microsoft.OpenApi" Version="1.2.*" />
        <PackageReference Include="Newtonsoft.Json" Version="12.0.*" />
        <PackageReference Include="Serilog" Version="2.10.*" />
        <PackageReference Include="Serilog.Formatting.Compact" Version="1.1.*" />
        <PackageReference Include="Serilog.Sinks.Console" Version="3.1.*" />
        <PackageReference Include="System.CommandLine" Version="2.0.0-beta3.22114.*" />
        <PackageReference Include="System.ServiceModel.Primitives" Version="4.8.*" />
    </ItemGroup>
</Project>
